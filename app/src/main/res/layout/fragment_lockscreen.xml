<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentLockscreen">

    <LinearLayout
        android:id="@+id/right_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/number_pad_parent_margin"
        android:orientation="vertical">

        <Button
            android:layout_marginTop="@dimen/number_pad_margin_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="setPass"
            android:text="@string/menuitem_set_pincode" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/number_pad_margin_top"
            android:onClick="changePass"
            android:text="@string/menuitem_change_pincode" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:onClick="disable"
            android:text="@string/menuitem_disable_pincode" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/number_pad_margin_top"
            android:onClick="checkPass"
            android:text="@string/menuitem_lock_unit"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/number_pad_margin_top"
            android:text="@string/pin_disclaimer_text" />
    </LinearLayout>


</RelativeLayout>